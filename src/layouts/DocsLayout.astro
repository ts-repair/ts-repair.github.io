---
import '../styles/global.css';

interface Props {
  title: string;
  section?: string;
}

const { title, section } = Astro.props;

const navSections = [
  {
    title: "Getting Started",
    items: [
      { title: "Overview", href: "/docs/overview/" },
      { title: "Quick Start", href: "/docs/quick-start/" },
      { title: "Examples", href: "/docs/examples/" },
      { title: "Idioms", href: "/docs/idioms/" },
    ]
  },
  {
    title: "Language",
    items: [
      { title: "Syntax", href: "/docs/syntax/" },
      { title: "Type System", href: "/docs/types/" },
      { title: "Effect System", href: "/docs/effects/" },
      { title: "Refinement Types", href: "/docs/refinements/" },
    ]
  },
  {
    title: "Compiler",
    items: [
      { title: "CLI Reference", href: "/docs/cli/" },
      { title: "Code Generation", href: "/docs/codegen/" },
      { title: "AST JSON", href: "/docs/ast-json/" },
      { title: "Repair System", href: "/docs/repairs/" },
    ]
  },
  {
    title: "Reference",
    items: [
      { title: "Language Specification", href: "/docs/reference/specification/" },
      { title: "JSON Schemas", href: "/docs/reference/schemas/" },
      { title: "Roadmap", href: "/docs/roadmap/" },
    ]
  },
  {
    title: "Contributing",
    items: [
      { title: "Development Guide", href: "/docs/development/" },
    ]
  }
];

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - ts-repair Documentation</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <style is:global>
      .prose {
        color: #e5e7eb;
        line-height: 1.75;
      }
      .prose h1 {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: white;
      }
      .prose h2 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: white;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #374151;
      }
      .prose h3 {
        font-size: 1.125rem;
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        color: white;
      }
      .prose h4 {
        font-size: 1rem;
        font-weight: 600;
        margin-top: 1.25rem;
        margin-bottom: 0.5rem;
        color: #d1d5db;
      }
      .prose p {
        margin-bottom: 1rem;
      }
      .prose ul, .prose ol {
        margin-bottom: 1rem;
        padding-left: 1.25rem;
      }
      .prose li {
        margin-bottom: 0.5rem;
      }
      .prose ul {
        list-style-type: disc;
      }
      .prose ol {
        list-style-type: decimal;
      }
      .prose pre {
        background: #111827;
        border: 1px solid #374151;
        border-radius: 0.5rem;
        padding: 0.75rem;
        overflow-x: auto;
        margin-bottom: 1rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.75rem;
        -webkit-overflow-scrolling: touch;
      }
      .prose code {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8em;
      }
      .prose :not(pre) > code {
        background: #1f2937;
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        color: #f9fafb;
        word-break: break-word;
      }

      /* Table wrapper for horizontal scrolling */
      .table-wrapper {
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        margin-bottom: 1.5rem;
      }
      .prose table {
        width: 100%;
        min-width: 400px;
        border-collapse: collapse;
        margin-bottom: 0;
        font-size: 0.75rem;
      }
      .prose th, .prose td {
        padding: 0.5rem 0.75rem;
        border: 1px solid #374151;
        text-align: left;
      }
      .prose th {
        background: #1f2937;
        font-weight: 600;
        color: white;
        white-space: nowrap;
      }
      .prose td {
        background: #111827;
      }
      .prose a {
        color: #4ade80;
        text-decoration: none;
        word-break: break-word;
      }
      .prose a:hover {
        text-decoration: underline;
      }
      .prose blockquote {
        border-left: 4px solid #4ade80;
        padding-left: 1rem;
        margin: 1.5rem 0;
        color: #9ca3af;
        font-style: italic;
      }
      .prose hr {
        border: none;
        border-top: 1px solid #374151;
        margin: 2rem 0;
      }
      .prose strong {
        color: white;
        font-weight: 600;
      }

      /* Syntax highlighting for clank */
      .prose pre code .comment { color: #6b7280; }
      .prose pre code .keyword { color: #c084fc; }
      .prose pre code .string { color: #fbbf24; }
      .prose pre code .number { color: #a78bfa; }
      .prose pre code .function { color: #4ade80; }
      .prose pre code .type { color: #38bdf8; }

      /* Sidebar active state */
      .sidebar-link {
        display: block;
        padding: 0.375rem 0.75rem;
        border-radius: 0.375rem;
        color: #9ca3af;
        transition: all 0.15s;
        font-size: 0.875rem;
      }
      .sidebar-link:hover {
        color: white;
        background: rgba(255, 255, 255, 0.05);
      }
      .sidebar-link.active {
        color: #4ade80;
        background: rgba(74, 222, 128, 0.1);
      }

      /* Mobile sidebar overlay */
      .sidebar-overlay {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 40;
      }
      .sidebar-overlay.active {
        display: block;
      }

      /* Desktop styles */
      @media (min-width: 768px) {
        .prose h1 {
          font-size: 2.25rem;
        }
        .prose h2 {
          font-size: 1.5rem;
          margin-top: 2.5rem;
        }
        .prose h3 {
          font-size: 1.25rem;
          margin-top: 2rem;
        }
        .prose h4 {
          font-size: 1.1rem;
          margin-top: 1.5rem;
        }
        .prose ul, .prose ol {
          padding-left: 1.5rem;
        }
        .prose pre {
          padding: 1rem;
          font-size: 0.875rem;
        }
        .prose table {
          font-size: 0.875rem;
        }
        .prose th, .prose td {
          padding: 0.75rem 1rem;
        }
      }
    </style>
  </head>
  <body class="bg-gray-950 text-gray-100 font-sans antialiased">
    <!-- Mobile sidebar overlay -->
    <div id="sidebar-overlay" class="sidebar-overlay"></div>

    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 bg-gray-950/80 backdrop-blur-md border-b border-gray-800">
      <div class="max-w-7xl mx-auto px-4 md:px-6 py-3 md:py-4 flex justify-between items-center">
        <div class="flex items-center gap-4 md:gap-6">
          <!-- Mobile menu button -->
          <button
            id="menu-toggle"
            class="md:hidden p-2 -ml-2 text-gray-400 hover:text-white"
            aria-label="Toggle menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <a href="/" class="text-lg md:text-xl font-bold text-repair-400">ts-repair</a>
          <span class="text-gray-600 hidden md:inline">|</span>
          <a href="/docs/" class="text-gray-400 hover:text-white transition-colors hidden md:inline">Docs</a>
        </div>
        <div class="flex gap-4 md:gap-6 items-center">
          <a href="/#how-it-works" class="text-gray-400 hover:text-white transition-colors hidden md:inline">How it Works</a>
          <a href="/#examples" class="text-gray-400 hover:text-white transition-colors hidden md:inline">Examples</a>
          <a href="https://github.com/ts-repair/ts-repair" class="btn-secondary text-xs md:text-sm py-2 px-3 md:px-4">GitHub</a>
        </div>
      </div>
    </nav>

    <div class="flex pt-14 md:pt-16 min-h-screen">
      <!-- Sidebar -->
      <aside
        id="sidebar"
        class="fixed left-0 top-14 md:top-16 bottom-0 w-64 bg-gray-900/95 md:bg-gray-900/50 border-r border-gray-800 overflow-y-auto z-50 transform -translate-x-full md:translate-x-0 transition-transform duration-200 ease-in-out"
      >
        <nav class="p-4">
          {navSections.map((section) => (
            <div class="mb-6">
              <h3 class="text-xs font-semibold uppercase tracking-wider text-gray-500 mb-2 px-3">
                {section.title}
              </h3>
              <ul>
                {section.items.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class:list={["sidebar-link", { active: currentPath === item.href || currentPath === item.href.slice(0, -1) }]}
                    >
                      {item.title}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}

          <div class="mt-8 pt-6 border-t border-gray-800">
            <a
              href="https://github.com/ts-repair/docs"
              class="sidebar-link flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
              Agent Skill Repo
            </a>
          </div>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="flex-1 w-full md:ml-64 px-4 md:px-8 py-6 md:py-8 max-w-4xl">
        <article class="prose">
          <slot />
        </article>

        <!-- Footer navigation -->
        <footer class="mt-12 md:mt-16 pt-6 md:pt-8 border-t border-gray-800">
          <div class="flex flex-col md:flex-row justify-between gap-4 text-sm">
            <div>
              <span class="text-gray-500">Need help?</span>
              <a href="https://github.com/ts-repair/ts-repair/issues" class="text-repair-400 hover:underline ml-2">Open an issue</a>
            </div>
            <div>
              <span class="text-gray-500">Edit this page on</span>
              <a href="https://github.com/ts-repair/docs" class="text-repair-400 hover:underline ml-2">GitHub</a>
            </div>
          </div>
        </footer>
      </main>
    </div>

    <script>
      const menuToggle = document.getElementById('menu-toggle');
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('sidebar-overlay');

      function toggleMenu() {
        sidebar?.classList.toggle('-translate-x-full');
        overlay?.classList.toggle('active');
        document.body.classList.toggle('overflow-hidden');
      }

      menuToggle?.addEventListener('click', toggleMenu);
      overlay?.addEventListener('click', toggleMenu);

      // Close sidebar when clicking a link (mobile)
      sidebar?.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth < 768) {
            toggleMenu();
          }
        });
      });

      // Handle resize - close mobile menu when resizing to desktop
      window.addEventListener('resize', () => {
        if (window.innerWidth >= 768) {
          sidebar?.classList.add('-translate-x-full');
          overlay?.classList.remove('active');
          document.body.classList.remove('overflow-hidden');
        }
      });
    </script>
  </body>
</html>
