console.log(\`\${plan.initialErrors} → \${plan.finalErrors} errors\`);

<span class="text-purple-400">for</span> (<span class="text-purple-400">const</span> step <span class="text-purple-400">of</span> plan.steps) {
  console.log(\`Apply: \${step.fixDescription}\`);
}`;

// Configuration options example
const configOptionsExample = `<span class="text-purple-400">await</span> repair({
  project: <span class="json-string">'./tsconfig.json'</span>,
  <span class="text-gray-500">// Max candidates per diagnostic</span>
  maxCandidates: <span class="json-number">10</span>,
  <span class="text-gray-500">// Max candidates per iteration</span>
  maxCandidatesPerIteration: <span class="json-number">100</span>,
  <span class="text-gray-500">// Verification budget</span>
  maxVerifications: <span class="json-number">500</span>,
  <span class="text-gray-500">// Include high-risk fixes (type assertions)</span>
  includeHighRisk: <span class="json-number">false</span>,
  <span class="text-gray-500">// Scoring: 'delta' or 'weighted'</span>
  scoringStrategy: <span class="json-string">'delta'</span>,
});`;

