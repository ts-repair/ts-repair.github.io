import Layout from '../layouts/Layout.astro';
import '../styles/global.css';

// Code examples
const algorithmExample = `<span class="text-gray-500">while</span> diagnostics > <span class="json-number">0</span>:
  <span class="text-gray-500">for each</span> diagnostic, get candidate fixes
  <span class="text-gray-500">for each</span> candidate:
    apply to in-memory copy
    re-run type checker
    measure delta (errors removed - errors introduced)
  select best candidate (max delta)
  commit and repeat`;

const repairPlanExample = `{
  <span class="json-key">"status"</span>: <span class="json-string">"12 diagnostics → 0 diagnostics"</span>,
  <span class="json-key">"confidence"</span>: <span class="json-string">"verified"</span>,
  <span class="json-key">"steps"</span>: [
    {
      <span class="json-key">"action"</span>: <span class="json-string">"Add missing import"</span>,
      <span class="json-key">"resolves"</span>: <span class="json-number">7</span>,
      <span class="json-key">"file"</span>: <span class="json-string">"src/api.ts"</span>,
      <span class="json-key">"change"</span>: <span class="json-string">"import { User } from './types'"</span>
    },
    {
      <span class="json-key">"action"</span>: <span class="json-string">"Fix argument type"</span>,
      <span class="json-key">"resolves"</span>: <span class="json-number">3</span>,
      <span class="json-key">"file"</span>: <span class="json-string">"src/handlers.ts"</span>
    },
    {
      <span class="json-key">"action"</span>: <span class="json-string">"Add null check"</span>,
      <span class="json-key">"resolves"</span>: <span class="json-number">2</span>,
      <span class="json-key">"file"</span>: <span class="json-string">"src/utils.ts"</span>
    }
  ]
}`;

const dispositionExample = `{
  <span class="json-key">"remaining"</span>: [
    {
      <span class="json-key">"diagnostic"</span>: <span class="json-string">"TS2304: Cannot find name 'foo'"</span>,
