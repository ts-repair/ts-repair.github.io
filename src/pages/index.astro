// Code examples
const algorithmExample = `<span class="text-gray-500">while</span> diagnostics > <span class="json-number">0</span>:
  <span class="text-gray-500">for each</span> diagnostic, get candidate fixes
  <span class="text-gray-500">for each</span> candidate:
    apply to in-memory copy
    re-run type checker
    measure delta (errors removed - errors introduced)
  select best candidate (max delta)
  commit and repeat`;

const repairPlanExample = `{
  <span class="json-key">"status"</span>: <span class="json-string">"12 diagnostics → 0 diagnostics"</span>,
  <span class="json-key">"confidence"</span>: <span class="json-string">"verified"</span>,
