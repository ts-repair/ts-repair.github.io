  </section>

  <!-- Quickstart Section -->
  <section id="quickstart" class="py-24 px-6 bg-gray-900/50">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-4 text-center">Quickstart</h2>
      <p class="text-gray-400 text-center mb-12 max-w-2xl mx-auto">
        Get verified TypeScript repairs in under a minute.
      </p>

      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-semibold mb-4">CLI Usage</h3>
