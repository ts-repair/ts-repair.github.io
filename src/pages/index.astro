      <span class="json-key">"enabled"</span>: <span class="json-number">true</span>
    }
  }
}`;

const codexConfig = `<span class="text-gray-500">[mcp_servers.ts-repair]</span>
command = <span class="json-string">"bunx"</span>
args = [<span class="json-string">"ts-repair"</span>, <span class="json-string">"mcp-server"</span>]
enabled = <span class="json-number">true</span>`;

// Programmatic API example
const programmaticApiExample = `<span class="text-purple-400">import</span> { repair } <span class="text-purple-400">from</span> <span class="json-string">'ts-repair'</span>;

<span class="text-purple-400">const</span> plan = <span class="text-purple-400">await</span> repair({
  project: <span class="json-string">'./tsconfig.json'</span>,
  maxCandidates: <span class="json-number">10</span>,
  maxVerifications: <span class="json-number">500</span>,
